<table class="table table-striped" id="dataTable">
    <thead>
    <tr>
        <td>#</td>
        <td>Format</td>
        <td>Title</td>
        <td>Author</td>
        <td>Status</td>
        <td>Action</td>
    </tr>
    </thead>
    <tbody>
    {% for post in posts %}
        {% if post.published == true %}
            {% set published = '<span class="label label-success"><i class="fa fa-check"></i> Published</span>' %}
            {% else %}
                {% set published = '<span class="label label-danger"><i class="fa fa-times"></i> Published</span>' %}
        {% endif %}
        <tr>
            <td>{{ post.id }}</td>
            <td>{{ post.format }}</td>
            <td>{{ post.title }}</td>
            <td>{{ post.author.username }}</td>
            <td>{{ published|raw }}</td>
            <td>
                <a href="{{ path('admin_blog_post', {'id': post.id}) }}">
                    <button id="{{ post.id }}" type="button" class="btn btn-info btn-xs editButton"
                            data-toggle="tooltip"
                            data-placement="top" title="Edit">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                </a>
                <a href="{{ path('admin_blog_post_delete', {'id': post.id}) }}">
                    <button id="delButton" type="button" class="btn btn-danger btn-xs" data-toggle="tooltip"
                            data-placement="top" title="Delete">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

