<table class="table table-striped" id="dataTable">
    <thead>
    <tr>
        <td>#</td>
        <td>Title</td>
        <td>Action</td>
    </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>
                <a href="{{ path('admin_blog_category', {'id': category.id}) }}">
                    <button id="{{ category.id }}" type="button" class="btn btn-info btn-xs editButton"
                            data-toggle="tooltip"
                            data-placement="top" title="Edit">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                </a>
                <a href="{{ path('admin_blog_category_delete', {'id': category.id}) }}">
                    <button tid="delButton" ype="button" class="btn btn-danger btn-xs" data-toggle="tooltip"
                            data-placement="top" title="Delete">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>